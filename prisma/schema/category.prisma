model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  image       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  providerId String
  provider   ProviderProfile @relation(fields: [providerId], references: [id], onDelete: Cascade)
  meals      Meal[]

  @@map("categories")
}
